<html>
<head>
    <title>{% block siteTitle %}{% endblock %}</title>
    <!-- Externe Styles -->
    <link rel="stylesheet" href="{{ asset('bundles/frontend/css/materialize-0.97.6.min.css') }}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    {% block customStyles %}{% endblock %}
    <!--Externe Scripts-->
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.4.0/knockout-min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
    <script src="{{ asset('bundles/frontend/js/DateFormat.js') }}"></script>
    {% block customScripts %}{% endblock %}
<style>
*{
    padding:        0;
    margin:         0;
    position:       relative;
}
body{
    width:          100%;
    height:         100%;
    height:         100vh;
}
.logo-img{
    height: 100%;
}
.header{
    width:          100%;
}
.title{
    text-align:     center;
    padding-top: 50px;

}
</style>
<script>
$(document).ready(function() {
    $(".button-collapse").sideNav();
    $('ul li .logout').click(function(event){
       localStorage.setItem('apikey', null);
       window.open('{{ path('whitelist-request.login') }}','_self');
       event.preventDefault();
    });
});
</script>
</head>
<body>
<header class="header navbar-fixed">
    <nav>
        <div class="nav-wrapper grey lighten-3">
            <div class="brand-logo center logo-img">
                <a href="#" class="logo-img"><img class="logo-img" src="{{ asset('bundles/frontend/img/DRV.png') }}" alt="DRV-Logo"/></a>
                <a href="#" class="logo-img"><img class="logo-img" src="{{ asset('bundles/frontend/img/Nestecs.png') }}" alt="Nestecs-Logo"/></a>
            </div>
            {% block headerLinks %}
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
            <ul class="right hide-on-med-and-down ">
                <li><a class="waves-effect waves-light black-text" href="{{ path('whitelist-request.list',{'username' : username }) }}">Anfragen</a></li>
                <li><a class="waves-effect waves-light black-text" href="{{ path('whitelist-request.form',{'username': username}) }}">Anfrage Erstellen</a></li>
                <li><a class="waves-effect waves-light black-text logout" href="#">Logout</a></li>
                {% block headerLinksRight %}{% endblock %}
            </ul>
            <ul class="side-nav" id="mobile-demo">
                <li><a class="waves-effect waves-light" href="{{ path('whitelist-request.list',{'username' : username }) }}">Anfragen</a></li>
                <li><a class="waves-effect waves-light" href="{{ path('whitelist-request.form',{'username': username}) }}">Anfrage Erstellen</a></li>
                <li><a class="waves-effect waves-light logout" href="#">Logout</a></li>
                {% block headerLinksSide %}{% endblock %}
            </ul>
            {% endblock %}
        </div>
    </nav>
</header>
<main class="main">
    <div class="title">
        {% block title %}
        <h1>Base HTML Title</h1>
        {% endblock %}
    </div>
    {% block mainContent %}
    <h1>Das ist mein base template main content</h1>
    {% endblock %}
</main>
<footer class="footer"></footer>
</body>
</html>