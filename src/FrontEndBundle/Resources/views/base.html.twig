<html>
<head>
    <title>{% block siteTitle %}{% endblock %}</title>
    <!--Externe Scripts-->
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.4.0/knockout-min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
    <!-- Externe Styles -->
    <link rel="stylesheet" href="{{ asset('bundles/frontend/css/materialize-0.97.6.min.css') }}">
    {% block customstyles %}{% endblock %}
    {% block customscripts %}{% endblock %}
<style>
*{
    padding:        0;
    margin:         0;
}
body{
    width:          100%;
    height:         100%;
    height:         100vh;
}
.header{
    width:          100%;
}
.nav-bar{
    height:         40px;
    background:     #ff0000;

    display:        flex;
    flex-flow:      row nowrap;
}
.nav-bar-content{
    flex-grow:      1;

    display:        flex;
    flex-flow:      row nowrap;
    justify-content:flex-start;
    align-items:    center;
}
.nav-bar-links{

    display:        flex;
    flex-flow:      row nowrap;
    justify-content:space-between;
    align-items:    center;

    margin:         0 0 0 5px;
}
.separator-vertical{
    width:          3px;
    height:         100%;

    background:     #000000;

    margin:         0 5px 0 0;
}
.title{
    text-align:     center;

    padding:        10px 0;
}
</style>
</head>
<body>
<header class="header">
    <div class="nav-bar">
        <div class="nav-bar-content">
            {% block headerContent %}
            <a class="btn waves-effect waves-light" href="{{ path('whitelist-request.list',{'username' : username }) }}">Anfragen</a>
            {% endblock %}
        </div>
        <div class="nav-bar-links">
            {% block headerLinks %}
            <div class="separator-vertical"></div>
            <a class="btn waves-effect waves-light" href="{{ path('whitelist-request.form',{'username': username}) }}">Anfrage Erstellen</a>
            <label class="btn waves-effect waves-light">Logout</label>
            {% endblock %}
        </div>
    </div>
</header>
<main class="main">
    <div class="title">
        {% block title %}
        <h1>Base HTML Title</h1>
        {% endblock %}
    </div>
    {% block maincontent %}
    <h1>Das ist mein base template main content</h1>
    {% endblock %}
</main>
<footer class="footer"></footer>
</body>
</html>